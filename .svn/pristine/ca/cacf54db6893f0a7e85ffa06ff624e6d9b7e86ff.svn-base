<!DOCTYPE html>
<html lang="zh-CN">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" />
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta http-equiv="Expires" content="0" />
    <title>个人信息</title>
    <link rel="stylesheet" href="./css/my_info/index.css" />
    <link href="./iconfont/iconfont.css" rel="stylesheet">
    <link href='./vant/index.css' rel='stylesheet'>
    <script src='./vue/vue.js'></script>
    <script src='./vant/vant.min.js'></script>
    <script src="./config/flexible.js"></script>
</head>

<body>
    <div id="friend" class="page" v-cloak>
        <van-nav-bar title="个人信息" :fixed="true" left-arrow @click-left="onClickLeft"
            style="background:linear-gradient(94deg,rgba(246,211,101,1),rgba(253,160,133,1)); color:#fff;">
        </van-nav-bar>
        <van-cell-group style="margin-top: 46px;">
            <van-cell title="头像" is-link>
                <div solt="default">
                    <van-uploader :after-read="afterRead" preview-image preview-full-image>

                        <van-image width="1.173333rem" height="1.173333rem" round :src="userInfo.imgData"
                            v-if="userInfo.imgData"></van-image>
                        <van-image width="1.173333rem" height="1.173333rem" round src="./img/info_head.jpg" v-else>
                        </van-image>
                    </van-uploader>
                </div>
            </van-cell>
            <van-cell title="昵称" is-link :value="userInfo.nickName" @click="is_show=true">
            </van-cell>
        </van-cell-group>
        <van-cell-group style="margin-top: 10px;">
            <van-cell title="绑定手机" :value="userInfo.mobile">
            </van-cell>
            <van-cell title="修改密码" is-link @click="toChange">
            </van-cell>
        </van-cell-group>
        <van-dialog class="account_dialog" v-model="is_show" title="修改昵称" :show-cancel-button="true"
            @confirm="confirmUser" :show-confirm-button="true">
            <van-field v-model="userInfo.nickName" type="text" label="修改昵称" placeholder="请输入昵称">
            </van-field>
        </van-dialog>
    </div>
    <script src="./api/axios.min.js"></script>
    <script src="./api/index.js"></script>
    <script src="./api/api.js"></script>
    <script src="./config/routers.js"></script>
    <script src="./js/my_info/index.js"></script>
</body>

</html>