html {
    align-items: center;
    flex       : 1;
    height     : 100%;

    [v-cloak] {
        display: none;
    }
}

.page {
    padding-bottom: 1.6rem;
    height        : 100%;
}

.van-nav-bar__title {
    color: #fff !important;
}

.van-nav-bar .van-icon {
    color: #fff !important;
}

.picurl {
    margin: .64rem .266667rem;

    .picurl_item {
        background : rgba(255, 255, 255, 1);
        box-shadow : 0px 0px 10px 0px rgba(0, 0, 0, 0.1);
        padding    : .453333rem;
        display    : flex;
        align-items: center;
        flex-wrap  : wrap;

        .van-image {
            margin-right: .133333rem;
        }
    }

    .picurl_text {
        text-align : center;
        margin-top : .733333rem;
        font-size  : .373333rem;
        font-family: PingFang SC;
        font-weight: 400;
        color      : rgba(115, 115, 115, 1);
    }
}